{
  "name": "create-bg",
  "version": "0.0.1",
  "description": "A CLI tool to create projects from GitHub templates",
  "type": "module",
  "bin": {
    "create-bg": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "scaffold",
    "template",
    "create-app",
    "generator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "picocolors": "^1.1.1",
    "degit": "^2.8.4",
    "which-pm-runs": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
